package controle;

import java.util.Scanner;

public class DesafioDiaDaSemana {
	
	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		
		String diaDaSemana = entrada.next();
		int dia = 0;
		
		if(diaDaSemana.equalsIgnoreCase("Domingo".trim())) {
			dia=1;
		}
		else if(diaDaSemana.equalsIgnoreCase("Segunda".trim())) {
			dia=2;
		}
		
		else if(diaDaSemana.equalsIgnoreCase("Ter√ßa".trim())) {
			dia=3;
		}
		
		
		
		
		
		entrada.close();
		
		
	}

}
