package controle;

import java.util.Scanner;

public class DesafioWhile {
	
	public static void main(String[] args) {
		
		
		Scanner teclado = new Scanner(System.in);
		
		String valor = teclado.nextLine();
		double nota = Double.parseDouble(valor); 
		int quantidadeNota = 0;
		double notaDigitada = 0;
		double  total = 0;
		
		while (nota !=-1) {
			System.out.println("Digite um nota válida");
			nota = teclado.nextDouble();
			
			if(notaDigitada<=10 && notaDigitada >=1) {
				
				total +=notaDigitada;
				quantidadeNota++;
				
			}
			
			double media = total / quantidadeNota;
			System.out.println("O total é : "+media);
			
		}
		
		teclado.close();
		
	}

}
